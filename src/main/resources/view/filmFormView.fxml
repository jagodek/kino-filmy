            <Label text="Title" GridPane.rowIndex="1" />
            <Label alignment="CENTER" text="Film ID" />
            <TextField editable="false" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1">
