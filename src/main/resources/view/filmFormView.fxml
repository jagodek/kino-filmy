        </rowConstraints>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="100.0" pickOnBounds="true">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
