<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="150.0" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.to.kinofilmy.controllers.TicketClippingPresenter">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="120.0" />
            <ColumnConstraints prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="Ticket id" GridPane.halignment="RIGHT">
                <GridPane.margin>
                    <Insets right="20.0" />
                </GridPane.margin>
            </Label>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets top="20.0" />
                </padding>
                <TextField fx:id="ticketIdInput">
                    <opaqueInsets>
                        <Insets top="2.0" />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="20.0" />
                    </VBox.margin>
                </TextField>
                <Label fx:id="loginLabel" text="Username required" textFill="RED" visible="false">
                    <VBox.margin>
                        <Insets left="10.0" right="20.0" top="5.0" />
                    </VBox.margin>
                </Label>
            </VBox>
            <Button fx:id="clipButton" alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#handleClipAction" text="OK" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" />
                </BorderPane.margin>
            <GridPane.margin>
               <Insets left="10.0" />
            </GridPane.margin>
            </Button>
        </GridPane>
    </center>
</BorderPane>
