<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.to.kinofilmy.controllers.TicketClippingPresenter"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0"
                                   prefWidth="190.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label  text="Ticket id" GridPane.halignment="RIGHT">
                <GridPane.margin>
                    <Insets right="20.0"/>
                </GridPane.margin>
            </Label>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <padding>
                    <Insets top="20.0"/>
                </padding>
                <TextField fx:id="ticketIdInput">
                    <opaqueInsets>
                        <Insets top="2.0"/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="20.0"/>
                    </VBox.margin>
                </TextField>
                <Label fx:id="loginLabel" text="Username required" textFill="RED" visible="false">
                    <VBox.margin>
                        <Insets left="10.0" right="20.0" top="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <Button alignment="CENTER_RIGHT" fx:id="clipButton" defaultButton="true" mnemonicParsing="false" onAction="#handleClipAction" text="OK" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" />
                </BorderPane.margin>
            </Button>
        </GridPane>
    </center>
</BorderPane>
