<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.to.kinofilmy.controllers.manageUserControllers.UserManagementPresenter">
    <center>
        <TableView fx:id="usersTable" prefHeight="500" prefWidth="500" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="firstnameColumn" prefWidth="100" text="First name" />
                <TableColumn fx:id="lastnameColumn" prefWidth="100" text="Last name" />
                <TableColumn fx:id="roleColumn" prefWidth="100" text="Role" />
                <TableColumn fx:id="emailColumn" prefWidth="100" text="Email" />
                <TableColumn fx:id="phoneNumberColumn" prefWidth="100" text="Phone number" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox prefWidth="160.0">
            <Button fx:id="addUserButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddUserAction" prefWidth="100" text="Add user">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="detailsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleEditUserAction" prefWidth="100" text="Manage user">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDeleteUserAction" prefWidth="100" text="Delete user">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" />
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
