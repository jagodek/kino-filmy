<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.to.kinofilmy.controllers.managesScreenControllers.ScreenManagementPresenter"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <TableView fx:id="screensTable" prefWidth="500" prefHeight="500" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100" text="Name"/>
                <TableColumn fx:id="seatsNumberColumn" prefWidth="100" text="Number of seats"/>
                <TableColumn fx:id="rowNumberColumn" prefWidth="100" text="Number of rows"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox prefWidth="100">
            <Button fx:id="addScreenButton" mnemonicParsing="false" onAction="#handleAddScreenAction" text="Add screen" prefWidth="100">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10"/>
                </VBox.margin>
            </Button>

            <Button fx:id="detailsButton" mnemonicParsing="false" onAction="#handleEditScreenAction" text="Manage screen" prefWidth="100">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10"/>
                </VBox.margin>
            </Button>

            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteScreenAction" text="Delete screen" prefWidth="100">
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
