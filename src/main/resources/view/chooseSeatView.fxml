<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.to.kinofilmy.controllers.SeatChoicePresenter">
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Button fx:id="refreshButton" minWidth="90.0" mnemonicParsing="false" onAction="#handleRefreshAction" text="Refresh">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" top="15.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="selectButton" minWidth="90.0" mnemonicParsing="false" onAction="#handleConfirmAction" text="Select">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" top="5.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    <center>
        <GridPane fx:id="seatsDisplay" prefHeight="600.0" prefWidth="700.0">
        </GridPane>
    </center>
</BorderPane>
